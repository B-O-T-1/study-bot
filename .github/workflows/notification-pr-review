name: PR Review Notification

on:
  pull_request:
    types: [edited, review_requested]

jobs:
  runs-on: ubuntu-latest
  steps:
    - name: PR Review Notification
      uses: oris-8/notification-pr-review@v0.1.0
      with:
        token: ${{ secrets.GITHUB_TOKEN }}
        webhook_url: ${{ vars.WEBHOOK_URL }}
        user_table: ${{vars.USER_TABLE}}
